<%= include header %>

<div class="column">
	<div class="container">
		<div class="row">
			<div class="col-md-8 <% if (column.type == 'locks' || column.type == 'wwkjd') { %> col-md-offset-2<%} %>">
				<div class="column-header">
					<h2 class="title"><%= column.title %>
						<% if (locals.user) { %>
							<a href="/column/<%= column.slug %>/edit"> Edit</a>
						<% } %>

					 </h2>
					<p class="date"><%= column.updated_at %></p>
					<% if ( column.main_image.image_url ) { %>
					<img src="https://s3.amazonaws.com/footballbyfootball-dev<%= column.main_image.image_url%>" alt="">
					<% } %>
					<% if (column.main_image.caption) { %><p class="ap-image"><%= column.main_image.caption %></p><% } %>
				</div>
				<div class="social-share">

			    <a href="https://twitter.com/intent/tweet?text=<%= column.title %>&amp;url=http%3A%2F%2Fwww.footballbyfootball.com%2Fcolumn%2F<%= column.slug %>"  class="social-button twitter" target="_blank">
					  <span class="fa fa-twitter"></span> Share on Twitter
					</a>

			    <a href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.footballbyfootball.com%2Fcolumn%2F<%= column.slug %>" onclick="window.open(this.href, '', 'height=279,width=575'); return false;" class="social-button facebook">
					  <span class="fa fa-facebook"></span> Share on Facebook
					</a>

				</div>

				<div class="column-content-wrapper cf">
					<% column.data.forEach(function(item){ %>
						<% if (item.type == 'content') { %>
							<%- item.content %>
						<%}%>
						<% if (item.type == 'image') { %>
							<div class="caption-image <%= item.image_type %>">
								<img src="https://s3.amazonaws.com/footballbyfootball-dev<%= item.image_url %>" />
								<% if (item.caption) { %><p class="ap-image"><%= item.caption %></p><% } %>
							</div>
						<%}%>
					<% }); %>

				</div>				
			</div>
			<% if (column.type != 'locks' || column.type != 'wwkjd') { %>
			<div class="col-md-4">
				<div class="column-sidebar">
					<div class="author-badge">
						<div class="black banner right">Football <span class="by">by</span> <%= column.player.name %></div>
						<div class="author-square" style="background-image: url(<%= column.player.image_url %>)"></div>
						<div class="content">
							<%- column.player.description %>
						</div>
					</div>
					<div class="under-author">
						<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
						<!-- Column-Player Ad -->
						<ins class="adsbygoogle"
						     style="display:inline-block;width:300px;height:250px"
						     data-ad-client="ca-pub-2768251721679098"
						     data-ad-slot="2559373961"></ins>
						<script>
						(adsbygoogle = window.adsbygoogle || []).push({});
						</script>
					</div>
				</div>
			</div>
			<% } %>
		</div>
		<div class="row">
			<div class="social-share big">

		    <a href="https://twitter.com/intent/tweet?text=<%= column.title %>&amp;url=http%3A%2F%2Fwww.footballbyfootball.com%2Fcolumn%2F<%= column.slug %>"  class="social-button twitter" target="_blank">
				  <span class="fa fa-twitter"></span> Share on Twitter
				</a>

		    <a href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.footballbyfootball.com%2Fcolumn%2F<%= column.slug %>" onclick="window.open(this.href, '', 'height=279,width=575'); return false;" class="social-button facebook">
				  <span class="fa fa-facebook"></span> Share on Facebook
				</a>

			</div>
		</div>
	</div>

</div>


<%= include footer %>