<%= include header %>

<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="author-badge" style="position: relative; margin: 50px 0;">
				<div class="black banner right">Football <span class="by">by</span> <%= writer.name %></div>
				<div class="author-square" style="background-image: url(<%= writer.image_url %>)"></div>
				<div class="content">
					<%- writer.description %>
				</div>
			</div>
		</div>

		<% if (writer.bio){ %>
		<div class="col-md-8 col-md-offset-2 bio">
			<h4 class="bio_title"><%= writer.name %>'s Bio:</h4>
			<div class="bio_content">
				<%- writer.bio %>
			</div>
		</div>
		<% } %>	

		<div class="row">
			<div class="col-md-8">
					<%	columns.forEach(function(entry, index){ %>
						<% if (entry.type == 'lockerroom'){ %>
							<div class="row small-entry">
								<div class="col-md-4">
									<img src="https://s3.amazonaws.com/footballbyfootball-dev/lockerroom/sansjags_backer-small.jpg" />
								</div>
								<div class="col-md-8">
									<h3><a href="/lockerroom/<%= entry.slug %>"><%= entry.title %></a></h3>
									<h5 class="grey"><%= entry.updated_at %></h5>
									<% entry.lockerentries.forEach(function(lockerentry){ %>
										<div class="author-image" style="background-image: url(<%= writer.image_url %>)"></div>
									<% }); %>
								</div>
							</div>
						<% } else { %>
							<div class="row small-entry">
								<div class="col-md-4 mini-image" style="background-image: url(https://s3.amazonaws.com/footballbyfootball-dev<%= entry.main_image.image_url %>);"></div>
								<div class="col-md-8">
									<h3><a href="/column/<%= entry.slug %>"><%= entry.title %></a></h3>
									<h5 class="grey"><%= entry.updated_at %></h5>
									<div class="byline">
										<div class="author-image" style="background-image: url(<%= writer.image_url %>)"></div>
										<%= writer.name %>
									</div>
								</div>
							</div>
						<% } %>	
						
					<% }); %>
			</div>
		</div>
	</div>
</div>

<%= include footer %>