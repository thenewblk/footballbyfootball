<%= include ../header %>

<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<h2>Edit Podcast</h2>
			<form action="/podcast/<%= podcast.slug %>/edit" method="post">
        <div class="post-form">
        	<p>
        		<input type="text" name="title" placeholder="Title" value="<%= podcast.title %>">
        	</p>

					<p>
						<select name="type">
							<option value="nfl" <% if (podcast.type == 'nfl') { %>selected<% } %>>NFL in the Game</option>
							<option value="college" <% if (podcast.type == 'college') { %>selected<% } %>>CFB Breakdown</option>
						</select>
					</p>

					<p>
						<input type="text" name="podcast" placeholder="Podcast URL" value="<%= podcast.podcast %>">
					</p>

					<p>
						<input type="checkbox" name="approved" <% if (podcast.approved){ %>checked="true" <%}%>> Approved
					</p>

					<input type="submit" value="Submit">
				</div>
			</form>
		</div>
	</div>
</div>

<%= include ../footer %>
