<!doctype html>
<html>
<head>
	<title>Press Mute</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link rel="stylesheet" href="/css/app.css">

	<script src="/js/jquery.1.9.min.js"></script>
</head>
<body>
	<div class="header">
		<h3 class="logo"><a href="/">Press Mute</a></h3>
		<% if (locals.user) { %>
			<% if (user.instagram.token) { %>
			<h4 class="login">Account</h4>
			<ul class="menu">
				<li><a href="/profile">Edit Profile</a></li>
				<li><a href="/logout">Logout</a></li>
			</ul>
			<% } %>
		<% } else { %>
		<h4 class="login">Login</h4>
		<ul class="menu">
			<li><a href="/login"><span class="fa fa-user"></span> Local Login</a></li>
			<li><a href="/signup"><span class="fa fa-user"></span> Local Signup</a></li>
			<li><a href="/auth/facebook"><span class="fa fa-facebook"></span> Facebook</a></li>
			<li><a href="/auth/twitter"><span class="fa fa-twitter"></span> Twitter</a></li>
			<li><a href="/auth/instagram"><span class="fa fa-instagram"></span> Instagram</a></li>
		</ul>
		<% } %>

	</div>