<%= include ../header %>

<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<h2>Edit Video</h2>
			<form action="/video/<%= video.slug %>/edit" method="post">
        <div class="post-form">
        	<p>
        		<input type="text" name="title" placeholder="Title" value="<%= video.title %>">
        	</p>

					<p>
						<input type="text" name="video" placeholder="Video URL" value="<%= video.video %>">
					</p>

					<p>
						<input type="checkbox" name="approved" <% if (video.approved){ %>checked="true" <%}%>> Approved
					</p>

					<input type="submit" value="Submit">
				</div>
			</form>
		</div>
	</div>
</div>

<%= include ../footer %>
